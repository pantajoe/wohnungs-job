<%- if flash[:success].present?%>
  var params = 'format=js';

  if ($('.toggle-archived.button').hasClass('is-primary')) {
    params = params + '&show_archive=true';
  }

  // render projects with newly created one if on root path
  $.ajax({ type: 'GET', url: '/', data: params });

  closeModals();
  <%-if params[:action] == 'update'%>
    resetForm($("#edit-project-modal--<%=@project.id%> form"));
  <%-elsif params[:action] == 'new'%>
    resetForm($("#new-project-modal form"));
  <%-end%>
<%-end%>

$('body').append("<%=j render(partial: 'layouts/flash_message')%>");
initializeFlashMessage();
<%-flash.clear%>
